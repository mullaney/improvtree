<h1>Rep</h1>

<dl>
  <dt>Student</dt>
  <dd>
    <%=
      link_to resource.enrollment.student.user.email, resource_path(resource.enrollment.student.user)
    %>
  </dd>

  <dt>Exercise</dt>
  <dd>
    <%= link_to resource.exercise.title, resource_path(resource.exercise.loaded) %>
    <p>
      <%= resource.exercise.description %>
    </p>
  </dd>

  <dt>Taken at:</dt>
  <dd>
    <%= resource.created_at.to_date.to_s(:long_ordinal) %>
    <p>
      <%= sanitize resource.exercise.description %>
    </p>
  </dd>

  <dt>Rating:</dt>
  <dd>
    <%= resource.difficulty %>
  </dd>
</dl>

<%= link_to 'Edit', edit_resource_path(resource) %>
