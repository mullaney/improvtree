<%= link_to 'New User', new_resource_path %>
<table>
  <thead>
    <th>Email Address</th>
    <th>Roles</th>
    <th></th>
  </thead>

  <% resources.each do |user| %>
    <tr>
      <td><%= user.email %></td>
      <td><%= user.roles.to_sentence %></td>
      <td>
        <%= link_to "Show", resource_path(user) %>
        <%= link_to "Edit", edit_resource_path(user) %>
        <%=
          link_to "Delete", resource_path(user),
            method: :delete,
            data: {
              confirm: "Are you sure?"
            }
        %>
      </td>
    </tr>
  <% end %>
</table>
